summary: LLVM tests for build/PR gating
adjust:
  - because: "Plan to be ran when either executed locally, or executed by CI system to gate a build or PR."
    when: >-
      trigger is defined
      and trigger != commit
      and trigger != build
    enabled: false
discover:
    how: fmf
execute:
    how: tmt
prepare:
    - name: packages
      how: install
      package: llvm
provision:
  hardware:
    memory: ">= 4 GiB"
